extends ../../layout/layout
include ../../components/catalog-item/catalog-item
include ../../components/description-block/description-block
include ../../components/index-slider/index-slider
include ../../components/index-infoblocks/index-infoblocks

block content
    main#barba-wrapper
        .barba-container(data-namespace='index')
            +first-screen
            +index-infoblocks(data.index_info)
            .row
                .col-24.col-xl-23
                    section.catalog
                        +description-block({
                            title: 'Каталог',
                            description: 'Оборудование и услуги<br>для решения производственных задач',
                            link: {
                                text: 'Перейти в каталог',
                                href: '#'
                            }
                        })
                        .catalog__list
                            .row
                                each item in data.catalogItem
                                    +catalog-item({
                                        title: item.title,
                                        imgPath: item.imgPath,
                                        linkPath: item.linkPath
                                })
            .row
                .col-24.col-xl-23
                    +description-block({
                        title: 'Проекты',
                        description: 'Помогаем решать задачи вовремя<br>и на профессиональном уровне',
                        link: {
                            text: 'Перейти в проекты',
                            href: '/projects.html'
                        }
                    })
            +index-slider
            +contacts

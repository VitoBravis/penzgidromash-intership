include ../../common/pug/mixins

mixin header(args)
    header.header&attributes(attributes)
        a.header__logo-container(href='#')
            +svg({name: 'logoPenz'}).header__logo-svg
            .header__logo-text
                | Пезнгидромаш
        .header__nav-container
            each linkItem in args
                a.header__nav-link(href=linkItem.link ? linkItem.link : '#')!= linkItem.text ? linkItem.text : ''
        .menu.menu--close
            .sandwich
                .sandwich__inner
                    .sandwich__lines
                        .sandwich__line.sandwich__line--top
                        .sandwich__line.sandwich__line--bottom
                .sandwich__text
                    .sandwich__text-item.sandwich__text-item--active
                        | меню
                    .sandwich__text-item.sandwich__text-item--hide
                        | закрыть
            .menu__arrow
                +svg({name: 'arrow'}).menu__arrow-svg
